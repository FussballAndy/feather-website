{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "$stores/*": ["src/stores/*"],
            "$components/*": ["src/components/*"],
            "$static/*": ["static/*"],
            "$assets/*": ["src/assets/*"],
            "$src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "src/node_modules", "types/main.d.ts", "types/SvelteFeatherIcons.d.ts"],
    "exclude": ["node_modules/*", "__sapper__/*", "static/*"]
    
}